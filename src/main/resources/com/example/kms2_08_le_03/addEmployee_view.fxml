<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.kms2_08_le_03.AddEmployeeController"
            prefHeight="500.0" prefWidth="500.0">

    <!-- Überschrift -->
    <Label text="Mitarbeiter hinzufügen" layoutX="200.0" layoutY="20.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Vornamen -->
    <Label text="Vorname:" layoutX="100.0" layoutY="100.0" />
    <TextField fx:id="employeeFirstNameField" layoutX="200.0" layoutY="100.0" prefWidth="200.0" promptText="Vorname des Mitarbeiters" />

    <!-- Nachnamen -->
    <Label text="Nachname:" layoutX="100.0" layoutY="150.0" />
    <TextField fx:id="employeeLastNameField" layoutX="200.0" layoutY="150.0" prefWidth="200.0" promptText="Nachname des Mitarbeiters" />

    <!-- Geburtsdatum -->
    <Label text="Geburtsdatum:" layoutX="100.0" layoutY="200.0" />
    <DatePicker fx:id="employeeBirthDateField" layoutX="200.0" layoutY="200.0" prefWidth="200.0" />

    <!-- Adresse -->
    <Label text="Adresse:" layoutX="100.0" layoutY="250.0" />
    <TextField fx:id="employeeAddressField" layoutX="200.0" layoutY="250.0" prefWidth="200.0" promptText="Adresse des Mitarbeiters" />

    <!-- Mail -->
    <Label text="E-Mail:" layoutX="100.0" layoutY="300.0" />
    <TextField fx:id="employeeEmailField" layoutX="200.0" layoutY="300.0" prefWidth="200.0" promptText="E-Mail des Mitarbeiters" />

    <!-- Gehalt -->
    <Label text="Gehalt:" layoutX="100.0" layoutY="350.0" />
    <TextField fx:id="employeeSalaryField" layoutX="200.0" layoutY="350.0" prefWidth="200.0" promptText="Gehalt des Mitarbeiters" />

    <!-- Abteilung -->
    <Label text="Abteilung:" layoutX="100.0" layoutY="400.0" />
    <TextField fx:id="employeeDepartmentField" layoutX="200.0" layoutY="400.0" prefWidth="200.0" promptText="Abteilung des Mitarbeiters" />

    <!-- Button Hinzufügen -->
    <Button text="Mitarbeiter hinzufügen" layoutX="200.0" layoutY="450.0" onAction="#handleAddEmployee" />

    <!-- Statuslabel  -->
    <Label fx:id="statusLabel" layoutX="200.0" layoutY="500.0" text="" />

    <!-- Button zum Schließen des Fensters -->
    <Button fx:id="closeButton" text="Zurück" layoutX="350.0" layoutY="450.0" onAction="#handleCloseWindow" />


</AnchorPane>
